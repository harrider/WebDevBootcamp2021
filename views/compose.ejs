<%- include("partials/header"); -%>

<h1>Compose</h1>

<form action="/compose" method="post">
    <div class="form-group">
        <label for="postTitle">Title</label>
        <input class="form-control" type="text" name="postTitle" autocomplete="off" placeholder="Give your post a title...">
    </div>

    <div class="form-group">
        <label for="postBody">Post</label>
        <textarea class="form-control" rows="5" name="postBody" id="postBody" placeholder="Start your post..."></textarea>
    </div>
    
    <button type="submit" class="btn btn-primary">Publish</button>
</form>

<%- include("partials/footer"); -%>